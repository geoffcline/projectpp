@model Project__.Models.UsersVM

<script type="text/javascript">
    function Message() {
        var params = '';
        params += $('#messageform').serialize();
        $.ajax({
            url: '@Url.Action("NewMessage")',
            method: 'POST',
            data: params

        });
    };
    function MessageBox() {
        $("#chatbox").load('MessageBox');
    };
</script>

<div class="ui grid">
    <div class="four wide column">
        <div class="ui card">
            <div class="image">
                <img src="~/Content/images/avatar1.png" style="max-height: 100%; max-width: 100%;" />
            </div>
            <div class="content">
                <div class="meta">
                    @Model.Group.Name
                </div>
                <div class="description">
                    @Model.Group.Description
                </div>
            </div>
        </div>
    </div>
    <div class="eight wide column">
        <div class="ui teal raised segment">
            Tasks
        </div>
        <div class="ui teal raised segment">
            <form name="messageform" id="messageform">
                <div id="chatbox"></div>
                <div class="ui input">
                    New Message <br />
                    <input name="newmessage" id="newmessage" rows="2">
                </div>
            </form>
            <div class="ui orange button" style="margin-top: 5px" onclick="Message()">Send</div>
        </div>
    </div>
    <div class="four wide column">
        <div class="ui teal raised segment">
            <div id='calendar'></div>
        </div>
        <div class="ui teal raised segment">
            Meetings
            <div class="ui divider"></div>
            <p>New Meeting Here</p>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        menuchange(2);
        $('#calendar').fullCalendar({
            height: 400
        });
    });
</script>