@model Project__.Models.UsersVM

<script type="text/javascript">
    function Register() {
        var params = '';
        var checkbox_value = $('input[name="avatar"]:checked').val();
        params += $('#registerform').serialize();
        params += '&avatarid=' + checkbox_value;
        jQuery.ajax({
            url: '@Url.Action("RegisterUser")',
            method: 'POST',
            data: params
        });
    }

    $(document).ready(function () {
        menuchange(5);
        $('#savedata').click(function () {
            var data = {
                "username": $("#signin_user").val(),
                "password": $("#signin_pass").val()
    };
            $.ajax({
                url: "/Pages/ValidateUser",
                type: "POST",
                data: JSON.stringify(data),
                dataType: "json",
                contentType: "application/json",
                success: function (response) {
                    if (response.Success) {
                        window.location.href = "@Url.Action("Index", "Home" )";
                    }
                    else
                        window.alert("Login was unsuccessful");
                },
                error: function () {
                    console.log('Login Fail!!!');
                }
            });
        });
    });

</script>



