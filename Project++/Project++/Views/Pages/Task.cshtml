<script type="text/javascript">
    function AddTask() {
        var params = '';
        params += $('#addtask').serialize();
        jQuery.ajax({
            url: '@Url.Action("addtask")',
            method: 'POST',
            data: params
        });
    };
    $(document).ready(function () {
        $("#datepicker").datepicker();
    });
</script>
<div class=" ui grid">
    <div class="ui eight column grid">
        <div class="ui "
    </div>

    <!-- Add Task Form-->
    <div class="ui two column grid">
        <div class="column">
            <div class="ui raised teal segment">
                <form name="addtask" id="addtask">
                    <div class="ui grid">
                        <div class="ten wide column">
                            <div>
                                <h3>Add Task</h3>
                            </div>
                            <div class="ui sixteen wide column">
                                <div class="ui input">
                                    <input name="name" placeholder="Name" type="text" size="40" style="margin-top: 5px; margin-right: 5px" value="" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="ten wide column">
                                    <div class="ui icon input">
                                        <input type="text" id="datepicker" size="32" placeholder="Due Date" />
                                        <i class="calendar icon"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="sixteen wide column">
                                <!-- Needs to be a Select Statement Queried for the Group-->
                                <div class="ui input" style="margin-top: 5px">
                                    <input name="member" placeholder="Member" type="text" size="40" value="" />
                                </div>
                            </div>
                            <div class="ui orange button" style="margin-top: 5px" onclick="AddTask()">
                                Add Task
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
