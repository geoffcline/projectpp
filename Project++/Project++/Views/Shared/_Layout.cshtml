<script type="text/javascript">
    function menuchange(i) {
        $('#tab' + i).removeClass('item');
        $('#tab' + i).addClass('active item');
    };
</script>

<style type="text/css">
    
</style>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/semantic.min.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="padding-top: 5px">
    <div class="ui grid">
        <div class="one wide column"></div>
        <div class="fourteen wide column">
            <div class="ui top attached inverted teal menu">
                <a id="tab1" class="item" onclick="menuchange(1)" href="/">Dashboard</a>
                <a id="tab2" class="item" onclick="menuchange(2)" href="/Home/About">About</a>
                <a id="tab3" class="item" href="/Home/Contact">Contact</a>
                <a class="item" href="/Pages/Colin">Manage Groups</a>
                <a class="ui right item" href="/Pages/Login">Sign In</a>
            </div>
        </div>
        <div class="one wide column"></div>
    </div>
    <div>
        <span>&nbsp;</span>
    </div>
    <div class="ui grid">
        <div class="one wide column"></div>
        <div class="fourteen wide column">@RenderBody()</div>
        <div class="one wide column"></div>
    </div>
    
    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/Scripts/semantic.min.js")
    @RenderSection("scripts", required: false)
</body>

</html>
